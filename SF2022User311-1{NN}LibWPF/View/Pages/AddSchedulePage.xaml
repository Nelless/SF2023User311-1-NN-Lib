<Page x:Class="SF2022User311_1_NN_LibWPF.View.Pages.AddSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SF2022User311_1_NN_LibWPF.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSchedulePage">

    <Grid Background="GhostWhite">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <UniformGrid>
                <Button x:Name="GoBackButton" VerticalAlignment="Center" Width="150" Content="Обычная страница" Click="GoBackButton_Click"/>
            </UniformGrid>
            <UniformGrid>
                <TextBlock HorizontalAlignment="Right" Width="80" Text="ФИО врача" />
                <ComboBox x:Name="FLPComboBox" Width="200" HorizontalAlignment="Center"/>
            </UniformGrid>
            <UniformGrid>
                <Button x:Name="SheduleButton" HorizontalAlignment="Center" Content="Сформировать расписание" Click="SheduleButton_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
